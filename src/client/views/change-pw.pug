extends base-template.pug 

block content 
    .container
        form#changePwForm(action="/change-pw", method="post")
            h1.mb-3 Neues Passwort festlegen
            .form-group.mb-3
                label(for="passwordInput1") Passwort 
                    span.text-danger *
                input#passwordInput1.form-control(type="password", placeholder="Passwort eingeben", aria-describedby="forgotPassword", name="password", autocomplete="new-password", required)
                #password1InvalidFeedback.small.text-danger.invalid-feedb Passwort muss mindestens 8 Zeichen lang sein und mindestens 1 Großbuchstaben, 1 Kleinbuchstaben und 1 Zahl beinhalten.
            .form-group.mb-4
                label(for="passwordInput2") Passwort wiederholen 
                    span.text-danger *
                input#passwordInput2.form-control(type="password", name="passwordRepeat", placeholder="Passwort eingeben", aria-describedby="forgotPassword", autocomplete="new-password", required)
                #password2InvalidFeedback.small.text-danger.invalid-feedb Passwörter stimmen nicht überein.
            button.btn.btn-primary.w-50.mb-1(type="submit") Passwort ändern
